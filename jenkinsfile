@Library('my-shared-library') _

pipeline{

    agent any

    parameters{
        choice(name:'action', choices: 'create/delete', description: 'Choos how you wanna proceed')
    }

    stages{
        
        stage('Git Checkout'){
            when{ 
            expression {
                params.action == 'create'
            }
            }
            steps{

            script{

                gitCheckout(
                    branch: 'main',
                    url: 'https://github.com/Araj28196/Devops-java-app.git'
                )

                }
            }
        }
    
        stage('Unit Test maven'){
            
            steps{
                when{ 
            expression {
                params.action == 'create'
            }
             }
            script{

                mvnTest()

                }
            }
        }

        stage('Integration Test maven'){
            
            steps{
                when{ 
            expression {
                params.action == 'create'
                }
            }
            script{

                mvnIntegrationTest()

                }
            }
        }
        
        stage('Static code analysis: Sonarqube'){
            
            steps{
                when{ 
            expression {
                params.action == 'create'
                }
            }
            script{
                def SonarQubecredentialsId = 'sonar-api'
                statiCodeAnalysis(SonarQubecredentialsId)
                }
            }
        }
    }
}