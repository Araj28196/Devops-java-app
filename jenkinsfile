@Library('my-shared-library') _

pipeline{

    agent any

    parameters{
        choice(name:'action', choices: 'create/delete', description: 'Choos how you wanna proceed')
    }

    stages{
        when{ 
            expression {
                params.action == 'create'
            }
        }
        stage('Git Checkout'){
            
            steps{

            script{

                gitCheckout(
                    branch: 'main',
                    url: 'https://github.com/Araj28196/Devops-java-app.git'
                )

                }
            }
        }
        when{ 
            expression {
                params.action == 'create'
            }
        }
        stage('Unit Test maven'){
            
            steps{

            script{

                mvnTest()

                }
            }
        }
        when{ 
            expression {
                params.action == 'create'
            }
        }
        stage('Integration Test maven'){
            
            steps{

            script{

                mvnIntegrationTest()

                }
            }
        }
        when{ 
            expression {
                params.action == 'create'
            }
        }
        stage('Static code analysis: Sonarqube'){
            
            steps{

            script{

                staticCodeAnalysis()

                }
            }
        }
    }
}